    <script>
        $('form').submit(function (e) {
            e.preventDefault();
        });

        $('#login').on('click', function (e) {

            var json = {
                email     : $("#email").val(),
                password  : $("#password").val()
            }

            let timerInterval
            swal({
                title: 'Please wait!',
                closeOnClickOutside: false,
                allowOutsideClick: false,
                html: `
                    Checking and Loading content in <strong></strong> seconds ...
                `,
                onOpen: () => {
                    swal.showLoading();
                },
                onClose: () => {}
            });

            $.post('/login', json).done(function (res) {
                if (res.status == 'success') {
                    setTimeout(function () {
                        swal({
                            position: 'center',
                            type: 'success',
                            title: 'Login Successfully',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }, 1000);
                    setTimeout(function () {
                        swal.close();
                        window.location.replace("/");
                    }, 2000);

                }else {
                    setTimeout(function () {
                        swal({
                            position: 'center',
                            type: 'warning',
                            title: res.status,
                            showConfirmButton: false,
                            timer: 4000
                        });
                    }, 1000);

                    setTimeout(function () {
                        swal.close();
                        window.location.replace("/login");
                    }, 2000);
                }
            })
        })
    </script>



    <script>
        $('form').submit(function (e) {
            e.preventDefault();
        });

        $('#register').on('click', function () {

            var json = {
              full_name                : $("#full_name").val(),
              email                    : $("#email_add").val(),
              phone                    : $("#phone").val(),
              major                    : $("#major").val(),
              password                 : $("#register_password").val(),
              confirm_password         : $("#register_password_repeat").val()
            }

            if (json.full_name != "" && json.email != "" && json.password != "") {
                if (json.password == json.confirm_password) {

                    register(json)

                } else {
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                    Toast.fire({
                        type: 'warning',
                        title: 'PASSWORD DOESNT MACTH!'
                    })
                }
            }else {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({
                    type: 'warning',
                    title: 'Some Field Are Required!'
                })
            }

        })


        function register(json) {

            let timerInterval
            swal({
                title: 'Please wait!',
                closeOnClickOutside: false,
                allowOutsideClick: false,
                html: `
                    Checking and Loading content in <strong></strong> seconds ...
                `,
                onOpen: () => {
                    swal.showLoading();
                },
                onClose: () => {}
            });

            $.post('/register/student', json).done(function (res) {
                if (res.status == 'success') {
                    setTimeout(function () {
                        swal({
                            position: 'center',
                            type: 'success',
                            title: 'Successfully Registered',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }, 1000);

                    setTimeout(function () {
                        swal.close();
                        window.location.replace("/");
                    }, 2000);
                }
                else {
                    setTimeout(function () {
                        swal({
                            position: 'center',
                            type: 'warning',
                            title: res.status,
                            showConfirmButton: false,
                            timer: 4000
                        });
                    }, 1000);

                    setTimeout(function () {
                        swal.close();
                        window.location.replace("/");
                    }, 2000);
                }
            })
        }
    </script>












